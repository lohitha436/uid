import 'package:flutter/material.dart';

void main() {
  runApp(const LayoutDemoApp());
}

class LayoutDemoApp extends StatelessWidget {
  const LayoutDemoApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      title: '23WH1A05G4',
      home: Scaffold(
        appBar: AppBar(
          title: const Text('Row, Column & Stack Demo-23WH1A05G4'),
        ),
        body: SingleChildScrollView(
          child: Padding(
            padding: const EdgeInsets.all(16),
            child: Column(
              children: [
                // row demo
              
                const SizedBox(height: 24),
               //column demo
                const Text(
                  'Ingredients',
                  style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                ),
                Container(
                  color: Colors.red[50],
                  padding: const EdgeInsets.all(8),
                  child: Column(
                    children: const [
                      Text('Flour'),
                      SizedBox(height: 8),
                      Text('Eggs'),
                      SizedBox(height: 8),
                      Text('Milk'),
                    ],
                  ),
                ),

                const SizedBox(height: 24),

                

                // stack demo
                const Text(
                  'Waffle',
                  style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                ),
                
                Container(
                  width: 200,
                  height: 200,
                  color: Colors.grey[300],
                  child: Stack(
                    children: [
                      Container(
                        width: 200,
                        height: 200,
                        color: Colors.white,
                      ),
                      
                      const SizedBox(height: 16),
                      Container(
                        width: 200,
                        height: 200,
                        color: Colors.white, // Set your desired background color here
                        child: Image.asset(
                          'assets/images/waffle2.png',
                          width: 150,
                          height: 150,
                        ),
                      ),
                     
                      Positioned(
                        bottom: 10,
                        right: 10,
                        child: const Text(
                          'WAFFLE',
                          style: TextStyle(
                            color: Colors.black,
                          ),
                        ),
                      ),
                    ],
                  ),
                ),
                  const Text(
                  'Review',
                  style: TextStyle(fontSize: 20, fontWeight: FontWeight.bold),
                ),
                Container(
                  color: Colors.green[50],
                  padding: const EdgeInsets.all(8),
                  child: Row(
                    mainAxisAlignment: MainAxisAlignment.spaceEvenly,
                    children: const [
                      Icon(Icons.star, color: Colors.orange, size: 30),
                      Icon(Icons.favorite, color: Colors.red, size: 30),
                      Icon(Icons.thumb_up, color: Colors.blue, size: 30),
                    ],
                  ),
                ),

              ],
            ),
          ),
        ),
      ),
    );
  }
}
